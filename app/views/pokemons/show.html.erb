<div id="health-bar">
  <% @counter = 1 %>
  <% @pokemon.hp.times do %>
    <div class="health-gauge health-<%= @counter %>"></div>
    <% @counter += 1 %>
  <% end %>
</div>

<div id="hp" class="invisible"><%= @pokemon.hp %></div>

<div id="execute"></div>

<div>
  <h4><%= @pokemon.name %></h4>
  <p>#<%= @pokemon.number %></p>
  <img src="<%= @pokemon.image %>" alt="Pokemon Image">
  <ul>Moves
    <% @moves.each do |pokemon_move| %>
      <li><%= pokemon_move.move.name %></li>
    <% end %>
  </ul>
</div>

<%= javascript_pack_tag 'battle' %>
